{
  "$schema": "https://getcomposer.org/schema.json",
  "autoload": {
    "files": [
      "src/EInvoiceAPI.php"
    ],
    "psr-4": {
      "EInvoiceAPI\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": false
    },
    "platform": {
      "php": "8.3"
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "license": "APACHE-2.0",
  "name": "e-invoice/e-invoice-api",
  "description": "PHP library for the e-invoice.be Peppol API",
  "require": {
    "php": "^8.1",
    "php-http/discovery": "^1.17",
    "php-http/multipart-stream-builder": "^1.4.2",
    "psr/http-client": "^1.0.3",
    "psr/http-client-implementation": "*",
    "psr/http-factory-implementation": "*",
    "psr/http-message": "^1.1.0|^2.0.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "nyholm/psr7": "^1.8",
    "pestphp/pest": "^3.8",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "*",
    "symfony/http-client": "^7.2"
  },
  "scripts": {
    "lint": "./scripts/lint",
    "test": "./scripts/test"
  }
}
